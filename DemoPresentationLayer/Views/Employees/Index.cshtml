@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home";
}
<div>
   <a class="btn btn-primary mt-3" asp-action="Create">Create New Employee</a>
   </div>
@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Age)</td>
                <td>@Html.DisplayNameFor(d => d.Salary)</td>
                <td>@Html.DisplayNameFor(d => d.Address)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Phone)</td>
                <td>@Html.DisplayNameFor(d => d.IsActive)</td>


                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e=>employee.Salary)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(e => employee.Email)</td>
                    <td>@employee.Phone</td>
                    <td>
                        @if(employee.IsActive)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>

                        }



                    <td><a asp-action="Details"class="btn btn-warning"asp-route-id="@employee.Id" ><i class="fas fa-eye"></i>Details</a></td>
                    <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@employee.Id"><i class="fas fa-edit"></i>Edit</a></td>
                    <td><a asp-action="Delete" class="btn btn-danger" asp-route-id="@employee.Id"><i class="fas fa-delete"></i>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-3 alert-warning">
        <h1>No Employees</h1>
    </div>
}
