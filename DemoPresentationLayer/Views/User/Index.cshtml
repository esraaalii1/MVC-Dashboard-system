@model  IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Create New Department</a>
</div>
<div class="mt-2">
    <form class="row offset-2" method="get" asp-action="Index">
        <div class="col-10">
            <input class="form-control" placeholder="User's' Name" name="email" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Id)</td>
                <td>@Html.DisplayNameFor(d => d.FirstName)</td>
                <td>@Html.DisplayNameFor(d => d.LastName)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Roles)</td>



                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in  Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@Html.DisplayFor(e=>item.Email)</td>
                    <td>@string.Join(",",item.Roles)</td>



                    <partial name="ButtonsPartial" Model="@item.Id"></partial>

                </tr>
            }
        </tbody>
    </table>


