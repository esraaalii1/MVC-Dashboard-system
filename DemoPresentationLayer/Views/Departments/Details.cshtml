@model Department
@{
    ViewData["Title"] = "Details";
}
<h1>@Model.Name Department Details</h1>
<div class="form-group mt-3">
    <Label asp-for="Code"></Label>
    <input readonly class="form-control" asp-for="Code" />
    <span asp-validation-for="Code" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="DateOfCreation"></label>
    <input readonly class="form-control" asp-for="DateOfCreation" />
    <span asp-validation-for="DateOfCreation" class="text-danger"></span>

</div>
<div class="mt-3">
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>
