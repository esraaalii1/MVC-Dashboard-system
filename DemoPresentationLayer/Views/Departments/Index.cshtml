@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<div>
   <a class="btn btn-primary mt-3" asp-action="Create">Create New Department</a>
   </div>
@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d=>d.Id)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>


                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.DateOfCreation</td>



                    <partial name="ButtonsPartial" Model="@item.Id"></partial>

                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-3 alert-warning">
        <h1>No Depatments</h1>
    </div>
}


